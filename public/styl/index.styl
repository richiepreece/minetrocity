  .menuItem
    width: 100%

  .content
    float: left
    width: 100%
    height: 90%

  .selected
    background-color: #39414A

  .login
    position: relative
    top: 5%
    margin-left: auto
    margin-right: auto
    width: 50%
    height: 90%
    display: none

  .mainSection
    position: relative
    top: 5%
