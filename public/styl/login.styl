.login-screen
  background: url('../img/top.png')
  background-repeat: repeat-x
  text-align: center
  padding-top: 50px

  .title
    padding: 30px 0

  .login-box
    background-color: white
    width: 600px
    margin: 0 auto
    padding: 50px

    border-radius(10px)
    box-shadow(0, 0, 20px, 2px, rgba(0, 0, 0, .5))

    .subtitle
      padding: 20px 0
      text-align: center
      font-size: 30px
      font-weight: bold

    div
      input
        width: 300px
        height: 20px
        margin: 5px 0

    input
      width: 80px
      margin: 10px 0

    .message
      color: green

      &.error
        color: red

      &.fadeout
        transition(1s, all)
        opacity: 0