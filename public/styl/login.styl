.login-screen
  text-align: center
  padding-top: 50px

  .title
    padding: 30px 0

  .login-box
    width: 600px
    margin: 0 auto
    padding: 50px

    .subtitle
      padding: 20px 0
      text-align: center
      font-size: 30px
      font-weight: bold

    div
      input
        width: 300px
        height: 20px
        margin: 5px 0

    input
      width: 80px
      margin: 10px 0

    .message
      color: green

      &.error
        color: red

      &.fadeout
        transition()
        opacity: 0