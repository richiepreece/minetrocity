///////////////////////////////////////
///////// mixins
///////////////////////////////////////

border-radius(radius=10px)
  -webkit-border-radius: radius
  -moz-border-radius: radius
  border-radius: radius

box-shadow(x=0, y=0, blur=20px, spread=2px, kolor=rgba(0, 0, 0, .5))
  -webkit-box-shadow: x y blur spread kolor
  -moz-box-shadow: x y blur spread kolor
  -ms-box-shadow: x y blur spread kolor
  -o-box-shadow: x y blur spread kolor
  box-shadow: x y blur spread kolor

transition(el=all, seconds=1s)
  -webkit-transition: el seconds
  -moz-transition: el seconds
  -o-transition: el seconds
  transition: el seconds

